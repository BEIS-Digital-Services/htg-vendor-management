@using Beis.HelpToGrow.Web.Constants
@model ProductSubmitConfirmationViewModel
@{
    ViewData["Title"] = "Submit confirmation";
}

@section Authentication {
    <partial name="_Authentication" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">The product details for @Model.ProductName have been submitted</h1>
            <div class="govuk-panel__body">

            </div>
        </div>

        <p class="govuk-body">
            We have sent you a confirmation email for your records to <strong>@Model.Email.</strong>
        </p>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body">
            We will review the information you have sent us. We will contact you to let you know if everything is OK, or if we need more details from you.
        </p>
        <p class="govuk-body">
            You cannot make any changes to the product information, until we have reviewed your answers.
        </p>

            <a class="govuk-button" data-module="govuk-button" asp-route="@RouteNameConstants.HomeIndexGet">Home</a>
    </div>
</div>