@using Beis.HelpToGrow.Web.Constants
@model UserViewModel
@{
    ViewData["Title"] = "Confirm remove user";
}

@section Authentication {
    <partial name="_Authentication" />
}

@using (Html.BeginRouteForm(RouteNameConstants.RemoveUserPost, new { userId = Model.UserId, hasToBeRemoved = Model.HasToBeRemoved }, FormMethod.Post))
{
    <input type="hidden" id="userId" name="userId" value="@Model.UserId" />
    @Html.HiddenFor(m => m.CompanyId)
    <a class="govuk-back-link" href="@Url.RouteUrl(RouteNameConstants.ManageUsersHomeGet, default, @Context.Request.Scheme)">
        Back
    </a>


    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            Are you sure that  you want to remove @Model.FullName?
                        </h1>
                    </legend>
                    <p class="govuk-body">They will lose access to the Help to Grow: Digital platform.</p>
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(model => model.HasToBeRemoved, "true", new { id = "yes", @class = "govuk-radios__input" })
                            @Html.Label("yes", "Yes", new { @class = "govuk-label govuk-radios__label" })
                        </div>
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(model => model.HasToBeRemoved, "false", new { id = "no", @class = "govuk-radios__input" })
                            @Html.Label("no", "No", new { @class = "govuk-label govuk-radios__label" })
                        </div>
                    </div>
                </fieldset>
            </div>
            <input class="govuk-button" type="submit" value="Confirm" />
        </div>
    </div>
}