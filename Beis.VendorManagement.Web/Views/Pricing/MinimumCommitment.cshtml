@using Beis.VendorManagement.Web.Constants
@model Beis.VendorManagement.Web.Models.Pricing.MinimumCommitmentViewModel;
@{
    ViewData["Title"] = "Minimum commitment";
}

@section Authentication {
    <partial name="_Authentication" />
}

<a class="govuk-back-link" href="@Url.RouteUrl(RouteNameConstants.PricingHomeGet, new { id = Model.ProductId, productPriceId = Model.ProductPriceId }, @Context.Request.Scheme)">
    Back
</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <span class="govuk-caption-l">@Model.ProductName</span>
        <h1 class="govuk-heading-l">Minimum commitment</h1>

        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th scope="row" class="govuk-table__header">Is there a minimum commitment period?</th>
                    <td class="govuk-table__cell">
                        @if (@Model.CommitmentFlag)
                        {
                            @Html.Raw("Yes")
                        }
                        else
                        {
                            @Html.Raw("No")
                        }
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Commitment period</th>
                    <th scope="col" class="govuk-table__header">Minimum users</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">

                    <td class="govuk-table__cell">@($"{Model.CommitmentNo} {(Model.CommitmentNo > 1 ? $"{Model.CommitmentUnit}": Model.CommitmentUnit)}")</td>
                    <td class="govuk-table__cell">@Model.MinNoUsers</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>