@model Beis.VendorManagement.Web.Models.Pricing.DiscountPeriodViewModel
@{
    ViewData["Title"] = "Discount period";
}

@section BackNavigation {
    <partial name="_BackToPricingHome" model="(Model.ProductId, Model.ProductPriceId)"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <span class="govuk-caption-l">@Model.ProductName</span>
        <h1 class="govuk-heading-l">Discount period</h1>

        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th scope="row" class="govuk-table__header">Is there a discount period?</th>
                    <td class="govuk-table__cell">
                        @if (@Model.DiscountFlag)
                        {
                            @Html.Raw("Yes")
                        }
                        else
                        {
                            @Html.Raw("No")
                        }
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Discount period</th>
                    <th scope="col" class="govuk-table__header">Discount as Â£</th>
                    <th scope="col" class="govuk-table__header">Discount as %</th>
                    <th scope="col" class="govuk-table__header">Discount application</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">@Model.DiscountTermNo @Model.DiscountTermUnit</td>
                    <td class="govuk-table__cell">@Model.DiscountPrice</td>
                    <td class="govuk-table__cell">@Model.DiscountPercentage</td>
                    <td class="govuk-table__cell">@Model.DiscountApplicationDescription</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>